<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".fragment.IntroSlide1Fragment"
                                                   android:background="@color/colorPrimary">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_intro_slide_background">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
            <ImageView
                    android:src="@drawable/empoweredconversationlogo"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/imageView2"
                    android:layout_marginBottom="-25dp"/>
            <TextView
                    android:text="Our tool is made for \n you!"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:textAlignment="center"
                    android:textSize="28sp" android:textColor="@color/colorDarkTeal"
                    android:id="@+id/textView6"
            />
        </LinearLayout>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:src="@tools:sample/avatars" android:id="@+id/imageView3"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView13" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/textView17"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:src="@tools:sample/avatars" android:id="@+id/imageView4"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:src="@tools:sample/avatars" android:id="@+id/imageView5"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/textView13"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:text="Communicate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView9"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:layout_marginStart="70dp"
                android:textSize="20sp" android:layout_marginTop="20dp" android:textColor="@android:color/black"/>
        <TextView
                android:text="When it comes to anonymously \nreaching out we have your back."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView13"
                app:layout_constraintTop_toBottomOf="@+id/textView9"
                app:layout_constraintStart_toStartOf="@+id/textView9" android:textSize="14sp"
                android:layout_marginTop="10dp" android:textAlignment="center"/>
        <TextView
                android:text="Educate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView14"
                app:layout_constraintTop_toBottomOf="@+id/textView13" app:layout_constraintEnd_toEndOf="@+id/textView13"
                android:textSize="20sp" android:layout_marginTop="55dp" android:textColor="@android:color/black"/>
        <TextView
                android:text="We'll help educate your loved ones \nso that they can be there for you."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView15"
                app:layout_constraintTop_toBottomOf="@+id/textView14" app:layout_constraintEnd_toEndOf="@+id/textView14"
                android:layout_marginTop="10dp"/>
        <TextView
                android:text="Empower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView16"
                app:layout_constraintTop_toBottomOf="@+id/textView15"
                app:layout_constraintStart_toStartOf="@+id/textView13" android:textSize="20sp"
                android:layout_marginTop="55dp" android:textColor="@android:color/black"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView17"
                app:layout_constraintTop_toBottomOf="@+id/textView16"
                app:layout_constraintStart_toStartOf="@+id/textView16" android:layout_marginTop="10dp"
                android:text="Have an empowered conversation \nthat will bring comfort and relief."
                android:includeFontPadding="false"
                android:textAlignment="viewStart"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>