<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.TermsOfServiceFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tos_text" />

            <CheckBox
                android:id="@+id/tos_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:buttonTint="@color/colorPrimaryDark"
                android:text="You agree to the terms and conditions"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintStart_toStartOf="@+id/continue_button"
                app:layout_constraintTop_toBottomOf="@+id/ff_number_layout" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/accept_button"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="Accept"
                android:textSize="14dp"
                app:cornerRadius="4dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>