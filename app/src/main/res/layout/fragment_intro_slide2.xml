<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".fragment.intro.IntroSlide1Fragment"
                                                   android:background="@color/colorPrimary">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="@color/color_intro_slide_background">
        <ImageView
                android:src="@drawable/empoweredconversationlogo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal" android:layout_marginBottom="-25dp"/>
        <TextView
                android:text="Your saftey is our \n top priority!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textAlignment="center"
                android:textSize="28sp" android:textColor="@color/colorDarkTeal"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" tools:src="@tools:sample/backgrounds/scenic"
                android:adjustViewBounds="true" android:layout_marginTop="45dp"
                app:srcCompat="@drawable/landing_stock_image"/>
        <TextView
                android:text="Be assured that all \n your interaction remain \n anonymous"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textSize="18sp" android:textColor="@android:color/black"
                android:textAlignment="center" android:textStyle="bold" android:layout_marginTop="45dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>